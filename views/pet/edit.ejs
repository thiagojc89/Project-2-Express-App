<%- include ../partials/header.ejs %>



<div class="new-pet-container">
	<div class="new-inner-container">
		
		<h2 class='schedule-header' id='update-header'>Update <%=pet.name%>'s Info</h2>

		<form action="/pets/<%=pet._id%>?_method=PUT" method="post" enctype="multipart/form-data">
			<ul class="creatPetForm">
				<li>Name:  	 <input class='new-input' type="text" name="name"    value="<%=pet.name%>"></input></li>
				<li>Kind: <input class='new-input' type="text" name="petKind" value="<%=pet.petKind%>"></input></li>
				<li>Breed: 	 <input class='new-input' type="text" name="breed"   value="<%=pet.breed%>"></input></li>
				<li>Age:	 <input class='new-input' type="text" name="age"     value="<%=pet.age%>"></input></li>
				

				<li>Photo:	 <input class='new-input' type="file" name="photo"></input></li>

			</ul>
			<button class="cool-propose-button" id='add-pet-button'>Update Pet</button>
		</form>
	</div>


</div>



